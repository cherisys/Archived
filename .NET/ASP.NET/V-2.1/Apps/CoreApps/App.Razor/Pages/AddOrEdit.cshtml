@page "{id:int?}"
@model AddOrEditModel
@{
    ViewData["Title"] = "Add/Edit";
}

<br />
<form method="post">
    <input asp-for="Emp.Id" type="hidden" />
    <div class="form-group">
        <label asp-for="Emp.Name"></label>
        <input asp-for="Emp.Name" class="form-control" />
        <span asp-validation-for="Emp.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Emp.Position"></label>
        <input asp-for="Emp.Position" class="form-control" />
        <span asp-validation-for="Emp.Position"></span>
    </div>

    <div class="form-group">
        <label asp-for="Emp.Age"></label>
        <input asp-for="Emp.Age" class="form-control" />
        <span asp-validation-for="Emp.Age"></span>
    </div>

    <div class="form-group">
        <label asp-for="Emp.Salary"></label>
        <input asp-for="Emp.Salary" class="form-control" />
        <span asp-validation-for="Emp.Salary"></span>
    </div>

    <div>
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn btn-primary" />
    </div>
</form>
<br />
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}